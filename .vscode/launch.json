  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Run Example(Debug)",
      "cargo": {
        "args": ["build", "--bin=niva", "--package=niva"],
        "filter": {
          "name": "niva",
          "kind": "bin"
        },
        "env": {
          "RUST_BACKTRACE": "-l framework=WebKit"
        }
      },
      "args": [
        "--debug-resource=packages/examples/simple-project",
        "--debug-devtools=true"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Run Devtools(Debug)",
      "cargo": {
        "args": ["build", "--bin=niva", "--package=niva"],
        "filter": {
          "name": "niva",
          "kind": "bin"
        },
        "env": {
          "RUST_BACKTRACE": "-l framework=WebKit"
        }
      },
      "args": [
        "--debug-entry=http://localhost:3000",
        "--debug-resource=packages/devtools/public",
        "--debug-config=packages/devtools/niva.json",
        "--debug-devtools=true"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Run Devtools(Debug, Release Entry)",
      "cargo": {
        "args": ["build", "--bin=niva", "--package=niva"],
        "filter": {
          "name": "niva",
          "kind": "bin"
        },
        "env": {
          "RUST_BACKTRACE": "-l framework=WebKit"
        }
      },
      "args": [
        "--debug-entry=http://localhost:3000",
        "--debug-resource=packages/devtools/public",
        "--debug-config=packages/devtools/niva.json",
        "--debug-devtools=true"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Run Devtools(Release, Debug Entry)",
      "cargo": {
        "args": ["build", "--bin=niva", "--package=niva", "--release"],
        "filter": {
          "name": "niva",
          "kind": "bin"
        },
        "env": {
          "RUST_BACKTRACE": "-l framework=WebKit"
        }
      },
      "args": [
        "--debug-resource=packages/devtools/build",
        "--debug-config=packages/devtools/niva.json"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Run Devtools(Release)",
      "cargo": {
        "args": ["build", "--bin=niva", "--package=niva", "--release"],
        "filter": {
          "name": "niva",
          "kind": "bin"
        },
        "env": {
          "RUST_BACKTRACE": "-l framework=WebKit"
        }
      },
      "args": [
        "--debug-resource=packages/devtools/build",
        "--debug-config=packages/devtools/niva.json"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Run Debug Alone",
      "cargo": {
        "args": ["build", "--bin=niva", "--package=niva"],
        "filter": {
          "name": "niva",
          "kind": "bin"
        },
        "env": {
          "RUST_BACKTRACE": "-l framework=WebKit"
        }
      },
      "args": [
        "--niva.name=example",
        "--niva.id=niva.example.1234",
        "--niva.window.preload=preload.js",
        "--niva.resource=packages/examples/simple-project"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}
